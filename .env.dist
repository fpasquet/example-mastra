# ─────────────────────────────
# OpenRouter Configuration
# ─────────────────────────────

# API key for accessing OpenRouter services
OPEN_ROUTER_API_KEY=your-openrouter-api-key

# Base URL for OpenRouter API calls
OPEN_ROUTER_BASE_URL=https://openrouter.ai/api/v1

# URL of the application using OpenRouter
OPEN_ROUTER_APP_URL=https://your-app-domain.com

# Name of the application using OpenRouter
OPEN_ROUTER_APP_NAME=My App Name

# ─────────────────────────────
# Database Configuration
# ─────────────────────────────
# Only local development
DATABASE_USER=postgres-user
DATABASE_PASSWORD=postgres-password
DATABASE_NAME=postgres
# PostgreSQL connection string for local development
DATABASE_URL=postgres://postgres-user:postgres-password@localhost:5432/postgres

# ─────────────────────────────
# Logging Configuration
# ─────────────────────────────
# Pino logging level: fatal | error | warn | info | debug | trace | silent
LOG_LEVEL=debug